# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/plataforma_colombiana"

# NextAuth.js Configuration
NEXTAUTH_SECRET="your-super-secret-key-minimum-32-characters-long"
NEXTAUTH_URL="http://localhost:3000"

# External APIs
WEATHER_API_KEY="your-weather-api-key"

# ExchangeRate-API Configuration
# Free tier: Leave empty or remove this variable to use https://open.exchangerate-api.com
# Paid tier: Add your API key from https://www.exchangerate-api.com to use paid endpoints
# The free tier has no authentication and works out of the box
EXCHANGE_RATE_API_KEY=""

YOUTUBE_API_KEY="your-youtube-api-key"
SPORTS_API_KEY="your-sports-api-key"
TRANSLATION_PROVIDER="deepl" # deepl | libre | openai
TRANSLATION_API_KEY="your-translation-api-key"
TRANSLATION_BASE_URL="" # optional override for LibreTranslate/self-hosted

# Sports API Provider (thesportsdb)
SPORTS_API_PROVIDER="thesportsdb"
# TheSportsDB configuration (v1)
THESPORTSDB_BASE_URL="https://www.thesportsdb.com/api/v1/json"
# For free tier you can use 123; replace with premium key if available
THESPORTSDB_API_KEY="123"
# Default timezone for fixtures
SPORTS_DEFAULT_TIMEZONE="America/Bogota"
# Default season (YYYY-YYYY) for TheSportsDB; empty to auto-calc
SPORTS_DEFAULT_SEASON=""

# Common league IDs (TheSportsDB) used by summary endpoints
# Find league IDs via search or docs. Examples below are placeholders.
LEAGUE_ENGLAND_ID="4328"      # English Premier League
LEAGUE_SPAIN_ID="4335"        # Spanish La Liga
LEAGUE_GERMANY_ID="4331"      # German Bundesliga
LEAGUE_CHAMPIONS_ID="4480"    # UEFA Champions League
LEAGUE_EUROPA_ID="4481"       # UEFA Europa League
LEAGUE_COLOMBIA_ID="1121"     # Colombian Primera A

# Optionally keep widget keys for API-FOOTBALL if you still use widgets
NEXT_PUBLIC_API_FOOTBALL_WIDGET_KEY=""
NEXT_PUBLIC_API_FOOTBALL_WIDGET_MODE="iframe"
NEXT_PUBLIC_API_FOOTBALL_WIDGET_REFRESH="60"
NEXT_PUBLIC_API_FOOTBALL_WIDGET_VERSION="1.1.8"

# National team IDs (if used elsewhere)
TEAM_COLOMBIA_ID=""
TEAM_SPAIN_ID=""
TEAM_ENGLAND_ID=""
TEAM_GERMANY_ID=""

# Security Configuration
BCRYPT_ROUNDS="12"
JWT_SECRET="your-jwt-secret-key-minimum-32-characters"
RATE_LIMIT_MAX="100"
RATE_LIMIT_WINDOW="900000"

# Application Configuration
NODE_ENV="development"
APP_URL="http://localhost:3000"
ALLOWED_ORIGINS="http://localhost:3000,https://yourdomain.com"

# Email Configuration (for notifications)
SMTP_HOST="your-smtp-host"
SMTP_PORT="587"
SMTP_USER="your-smtp-user"
SMTP_PASS="your-smtp-password"

# File Upload Configuration
MAX_FILE_SIZE="5242880"
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/webp"

# Monitoring and Logging
LOG_LEVEL="info"
SENTRY_DSN="your-sentry-dsn"

# Forum Configuration
OPENAI_API_KEY="your-openai-api-key" # For content moderation
FORUM_MODERATION_THRESHOLD="0.7"
FORUM_MAX_POSTS_PER_DAY="50"
FORUM_MAX_POSTS_PER_MINUTE="10"
FORUM_MAX_REPORTS_PER_HOUR="5"
CRON_SECRET="your-cron-secret-key" # Secret for cron job authentication
