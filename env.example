# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/plataforma_colombiana"

# NextAuth.js Configuration
NEXTAUTH_SECRET="your-super-secret-key-minimum-32-characters-long"
NEXTAUTH_URL="http://localhost:3000"

# External APIs
WEATHER_API_KEY="your-weather-api-key"
EXCHANGE_RATE_API_KEY="your-exchange-rate-api-key"
YOUTUBE_API_KEY="your-youtube-api-key"
SPORTS_API_KEY="your-sports-api-key"
TRANSLATION_PROVIDER="deepl" # deepl | libre | openai
TRANSLATION_API_KEY="your-translation-api-key"
TRANSLATION_BASE_URL="" # optional override for LibreTranslate/self-hosted

# Sports API Provider (thesportsdb)
SPORTS_API_PROVIDER="thesportsdb"
# TheSportsDB configuration (v1)
THESPORTSDB_BASE_URL="https://www.thesportsdb.com/api/v1/json"
# For free tier you can use 123; replace with premium key if available
THESPORTSDB_API_KEY="123"
# Default timezone for fixtures
SPORTS_DEFAULT_TIMEZONE="America/Bogota"
# Default season (YYYY-YYYY) for TheSportsDB; empty to auto-calc
SPORTS_DEFAULT_SEASON=""

# Optionally keep widget keys for API-FOOTBALL if you still use widgets
NEXT_PUBLIC_API_FOOTBALL_WIDGET_KEY=""
NEXT_PUBLIC_API_FOOTBALL_WIDGET_MODE="iframe"
NEXT_PUBLIC_API_FOOTBALL_WIDGET_REFRESH="60"
NEXT_PUBLIC_API_FOOTBALL_WIDGET_VERSION="1.1.8"

# National team IDs (if used elsewhere)
TEAM_COLOMBIA_ID=""
TEAM_SPAIN_ID=""
TEAM_ENGLAND_ID=""
TEAM_GERMANY_ID=""

# Security Configuration
BCRYPT_ROUNDS="12"
JWT_SECRET="your-jwt-secret-key-minimum-32-characters"
RATE_LIMIT_MAX="100"
RATE_LIMIT_WINDOW="900000"

# Application Configuration
NODE_ENV="development"
APP_URL="http://localhost:3000"
ALLOWED_ORIGINS="http://localhost:3000,https://yourdomain.com"

# Email Configuration (for notifications)
SMTP_HOST="your-smtp-host"
SMTP_PORT="587"
SMTP_USER="your-smtp-user"
SMTP_PASS="your-smtp-password"

# File Upload Configuration
MAX_FILE_SIZE="5242880"
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/webp"

# Monitoring and Logging
LOG_LEVEL="info"
SENTRY_DSN="your-sentry-dsn"
