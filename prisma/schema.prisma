generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "darwin-arm64"]
  engineType    = "binary"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String         @id @default(cuid())
  name          String?
  email         String         @unique
  nickname      String?        @unique
  emailVerified DateTime?
  image         String?
  password      String?
  role          UserRole       @default(USER)
  isActive      Boolean        @default(true)
  isBanned      Boolean        @default(false)
  reputation    Int            @default(0)
  lastLoginAt   DateTime?
  loginAttempts Int            @default(0)
  lockedUntil   DateTime?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  accounts      Account[]
  auditLogs     AuditLog[]
  businesses    Business[]
  forumComments ForumComment[]
  forumPosts    ForumPost[]
  reports       Report[]
  reviews       Review[]
  sessions      Session[]

  @@index([email])
  @@index([nickname])
  @@index([isActive])
  @@index([isBanned])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Business {
  id          String       @id @default(cuid())
  name        String
  description String
  city        String?
  phone       String
  email       String
  website     String?
  whatsapp    String?
  instagram   String?
  facebook    String?
  images      String[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  ownerId     String
  address     String?
  isActive    Boolean      @default(true)
  isVerified  Boolean      @default(false)
  latitude    Float?
  logoUrl     String?
  longitude   Float?
  plan        BusinessPlan @default(FREE)
  ranking     Int          @default(0)
  slug        String       @unique
  state       String?
  tiktok      String?
  category    String
  owner       User         @relation(fields: [ownerId], references: [id])
  products    Product[]
  reviews     Review[]

  @@index([city])
  @@index([category])
  @@index([plan])
}

model Product {
  id          String   @id @default(cuid())
  name        String
  description String
  price       Float?
  currency    String   @default("COP")
  image       String?
  featured    Boolean  @default(false)
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  businessId  String
  business    Business @relation(fields: [businessId], references: [id], onDelete: Cascade)

  @@index([featured])
  @@index([businessId])
}

model Forum {
  id          String      @id @default(cuid())
  name        String
  description String
  slug        String      @unique
  topic       ForumTopic
  startDate   DateTime
  endDate     DateTime
  isActive    Boolean     @default(true)
  isArchived  Boolean     @default(false)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  posts       ForumPost[]

  @@index([topic])
  @@index([isActive])
  @@index([startDate])
  @@index([isArchived])
}

model ForumPost {
  id              String         @id @default(cuid())
  content         String
  isEdited        Boolean        @default(false)
  isDeleted       Boolean        @default(false)
  isFlagged       Boolean        @default(false)
  flagReason      String?
  moderationScore Float?
  likesCount      Int            @default(0)
  reportsCount    Int            @default(0)
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  authorId        String
  forumId         String
  comments        ForumComment[]
  author          User           @relation(fields: [authorId], references: [id])
  forum           Forum          @relation(fields: [forumId], references: [id], onDelete: Cascade)
  reports         Report[]

  @@index([forumId])
  @@index([authorId])
  @@index([createdAt])
  @@index([isFlagged])
  @@index([isDeleted])
}

model ForumComment {
  id              String    @id @default(cuid())
  content         String
  isEdited        Boolean   @default(false)
  isDeleted       Boolean   @default(false)
  isFlagged       Boolean   @default(false)
  flagReason      String?
  moderationScore Float?
  likesCount      Int       @default(0)
  reportsCount    Int       @default(0)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  authorId        String
  postId          String
  author          User      @relation(fields: [authorId], references: [id])
  post            ForumPost @relation(fields: [postId], references: [id], onDelete: Cascade)
  reports         Report[]

  @@index([postId])
  @@index([authorId])
  @@index([createdAt])
  @@index([isFlagged])
  @@index([isDeleted])
}

model Report {
  id         String        @id @default(cuid())
  reason     ReportReason
  details    String?
  status     ReportStatus  @default(PENDING)
  reviewedBy String?
  reviewNote String?
  createdAt  DateTime      @default(now())
  updatedAt  DateTime      @updatedAt
  reporterId String
  postId     String?
  commentId  String?
  comment    ForumComment? @relation(fields: [commentId], references: [id], onDelete: Cascade)
  post       ForumPost?    @relation(fields: [postId], references: [id], onDelete: Cascade)
  reporter   User          @relation(fields: [reporterId], references: [id])

  @@index([status])
  @@index([reporterId])
  @@index([postId])
  @@index([commentId])
  @@index([createdAt])
}

model AuditLog {
  id         String   @id @default(cuid())
  action     String
  resource   String
  resourceId String?
  oldValues  Json?
  newValues  Json?
  ip         String?
  userAgent  String?
  createdAt  DateTime @default(now())
  userId     String?
  user       User?    @relation(fields: [userId], references: [id])

  @@index([action])
  @@index([resource])
  @@index([createdAt])
  @@index([userId])
}

model SecurityLog {
  id        String   @id @default(cuid())
  event     String
  severity  String
  ip        String?
  userAgent String?
  details   Json?
  createdAt DateTime @default(now())
  userId    String?

  @@index([event])
  @@index([severity])
  @@index([createdAt])
  @@index([ip])
}

enum UserRole {
  USER
  BUSINESS_OWNER
  MODERATOR
  ADMIN
}

enum Category {
  GASTRONOMIA
  TECNOLOGIA
  ARTESANIAS
  SERVICIOS
  MODA
  AGRICULTURA
  TURISMO
  SALUD
  EDUCACION
  CONSTRUCCION
  TRANSPORTE
  ENTRETENIMIENTO
  OTROS
}

enum ForumTopic {
  DAILY_1
  DAILY_2
}

enum ReportReason {
  SPAM
  HARASSMENT
  HATE_SPEECH
  INAPPROPRIATE_CONTENT
  MISINFORMATION
  OTHER
}

enum ReportStatus {
  PENDING
  REVIEWED
  RESOLVED
  DISMISSED
}

enum BusinessPlan {
  FREE
  BASIC
  PREMIUM
  SPONSOR
}

model Review {
  id        String   @id @default(cuid())
  rating    Int      // Del 1 al 5
  comment   String   @db.Text
  createdAt DateTime @default(now())

  // Relación con el Negocio
  businessId String
  business   Business @relation(fields: [businessId], references: [id], onDelete: Cascade)

  // Relación con el Usuario (Autor)
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([businessId])
  @@index([userId])
}
